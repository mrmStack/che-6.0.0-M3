.workspace-projects-content
  margin 0
  height calc(100vh - 140px)
  .che-list-header-additional-parts
    padding 25px 25px 15px 25px !important

  .che-list-header-additional
    padding 0

  .che-list-header
    md-item
      border-top none
    .che-list-header-content
      div.che-list-item-row
        min-height 47px
        line-height 47px
        background-color $cat-gray-color
        border 1px solid $very-light-grey-color
      .che-list-item-checkbox
        margin-right 90px
        min-width 50px
        height inherit
        position relative
        top 0
        left 2px
        margin 0
          div.md-container
            left calc(50% - 10px)

  div.che-list-header-column
    line-height inherit
    .header-sort-direction
      position absolute
    &:last-child
      display block
      text-align right
      span
        padding-right 25px

  .workspace-details-projects-list
    margin-bottom 1px
    che-box-shadow()

    .che-list-item
      border none
