.project-item-row
  min-height 47px
  position relative
  background-color $che-white-color
  border 1px solid $very-light-grey-color
  border-top none !important

  span.che-xs-header
    min-width 80px

  *
    outline none

  md-item.che-list-item
    display block
    border none

  md-item-content
    display block
    border none

    md-checkbox[disabled] div.md-icon
      border none

    md-switch
      overflow visible !important

    .che-list-item-row
      line-height 47px
      height 47px

      .che-list-item-checkbox
        min-width 50px
        height inherit

  md-checkbox.che-list-item-checkbox
   position relative
   top 0
   left 2px
   margin 0
    div.md-container
      left calc(50% - 10px)

  .che-list-actions a span
    margin-left 2px
